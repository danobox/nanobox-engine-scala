#!/bin/bash
# -*- mode: bash; tab-width: 2; -*-
# vim: ts=2 sw=2 ft=bash noet

# $1 = code_dir

# find one of the following:
# /*.sbt
# /project/*.scala
# /project/build.properties
# /.sbt/*.scala

[[ -n "$(ls ${1}/*.sbt 2>/dev/null)" ]] && exit 0
[[ -n "$(ls ${1}/project/*.scala 2>/dev/null)" ]] && exit 0
[[ -f ${1}/project/build.properties ]] && exit 0
[[ -n "$(ls ${1}/.sbt/*.scala 2>/dev/null)" ]] && exit 0

exit 1